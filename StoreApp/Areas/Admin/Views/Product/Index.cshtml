@model IEnumerable<Product>
<div class="text-center">

    <div class="display-6">
        Products
    </div>
    <div class="d-flex justify-content-end my-3">
        <a asp-action="Create" class="btn btn-outline-success">
            <i class="fas fa-plus"></i>
            Create</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>

                <th>Id</th>
                <th>Product Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>
                        <img src="@item.ImageUrl" class="img-thumbnail border border-light rounded shadow"
                            style="width: 100px;" alt="@item.ProductName" />
                    </td>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        <div class="btn-group">

                            <a asp-action="Update" asp-route-id="@item.ProductId" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                                Edit</a>

                            <a asp-controller="Product" asp-action="Get" asp-area="" target="_blank"
                                asp-route-id="@item.ProductId" class="btn btn-warning">
                                <i class="fas fa-search"></i>
                                Search</a>
                            <a asp-controller="Product" asp-action="Delete" target="_blank" asp-route-id="@item.ProductId"
                                class="btn btn-danger">
                                <i class="fas fa-trash"></i>
                                Delete</a>
                            @* <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn
                        btn-outline-primary">Delete</a> *@
                        </div>
                        @* <a href="@Url.Action("Edit", "Product", new { id = item.ProductId })">Edit</a> *@
                        @* <a href="@Url.Action("Delete", "Product", new { id = item.ProductId })">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>