@model ProductDtoForUpdate
<div class="text-center">
    <div class="display-6">Update Product</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId"></select>
        @* <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Category">
        @foreach (Category item in ViewBag.Categories)
        {
        <option value="@item.CategoryId">@item.CategoryName</option>
        }
        </select> *@
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control">
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control">
    </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control">
    </div>

    <div class="form-group my-3">
        <img class="rounded shadow" width="150" src="@Model?.ImageUrl">
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input type="file" name="file" class="form-control">
    </div>

    <div class="form-group my-3">
        <div class="btn-group">

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i>
                Update</button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i>
                Back</a>
        </div>

    </div>

</form>